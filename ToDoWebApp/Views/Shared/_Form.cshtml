@model ToDoWebApp.Models.ViewModels.ToDoViewModel

<form asp-action="InsertToDo" id="todoForm" method="POST" role="form" class="card p-3 shadow-sm">
    <h5 class="card-title">Add New To-Do</h5>

   

    <!-- Hidden ID Field -->
    <input asp-for="ToDoItem.id" id="Todo_Id" type="hidden" name="ToDoItem.id" />

    <!-- To-Do Name Field -->
    <div class="mb-3">
        <label asp-for="ToDoItem.name" class="form-label">Task Name</label>
        <input asp-for="ToDoItem.name" id="Todo_Name" name="ToDoItem.name" class="form-control" placeholder="Enter to-do task" />
        <span asp-validation-for="ToDoItem.name" class="text-danger"></span>
    </div>

    <!-- Subtasks Section -->
    <div id="subtasks-container">
        <div class="mb-1 subtask">
            <label class="form-label">Subtask</label>
            <input type="text" name="ToDoItem.SubTasks[0].Content" class="form-control" placeholder="Enter subtask" />
        </div>
    </div>

    <!-- Button to add more subtasks -->
    <div class="mb-3">
        <button type="button" id="add-subtask" class="btn btn-secondary w-100">Add Subtask</button>
    </div></>

    <!-- Submit Button -->
    <button type="submit" id="todo-form-button" class="btn btn-success w-100">Add To-Do</button>
</form>

